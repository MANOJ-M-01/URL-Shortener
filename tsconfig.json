{
  "compilerOptions": {
    "target": "ES2020",                          // Modern JS target
    "module": "CommonJS",                        // For Node.js compatibility
    "outDir": "dist",                            // Output directory for compiled JS
    "rootDir": "src",                            // Your source code folder
    "strict": true,                              // Enable all strict type checks
    "esModuleInterop": true,                     // Allows default imports from CommonJS
    "forceConsistentCasingInFileNames": true,    // Ensures file casing consistency
    "skipLibCheck": true,                        // Speeds up compilation by skipping type checks on lib files
    "resolveJsonModule": true,                   // Import JSON as modules
    "moduleResolution": "node",                  // Use Node.js module resolution
    "types": ["node"]                            // Includes Node.js types
  },
  "include": ["src"],                            // Include only the src folder
  "exclude": ["node_modules", "dist"]            // Exclude build output and dependencies
}
